<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="0dp"
                android:color="#777e7d7d" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="2dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp" />


        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <gradient
                android:angle="135"
                android:centerColor="#ad0094"
                android:endColor="#d6007b"
                android:startColor="#8900a8"
                android:type="linear" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>
